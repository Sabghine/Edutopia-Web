{% extends 'base_front.html.twig' %}

{% block title %}Liste travail rendu{% endblock %}
{% block content %}
{% block body %}
    <h1>Liste des travails rendus</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Travail rendu</th>
                <th>Statut</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for work_done in work_dones %}
            <tr>
                <td>{{ work_done.workFile }}</td>
                <td>{{ work_done.status }}</td>
                <td>
                    <a href="{{ path('work_done_show', {'id': work_done.id}) }}">Details</a>
                </td>
                <td>
                    <a href="{{ path('work_done_edit', {'id': work_done.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">aucun travail déposé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('activity_index')}}">Liste des activités</a>
{% endblock %}
{% endblock %}
