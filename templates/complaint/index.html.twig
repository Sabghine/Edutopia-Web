{% extends 'base.html.twig' %}

{% block title %}Complaint index{% endblock %}

{% block body %}
    <h1>Complaint index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Object</th>
                <th>Description</th>
                <th>Status</th>
                <th>CreatedDate</th>
                <th>UpdatedDate</th>
                <th>ArchivedDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for complaint in complaints %}
            <tr>
                <td>{{ complaint.id }}</td>
                <td>{{ complaint.object }}</td>
                <td>{{ complaint.description }}</td>
                <td>{{ complaint.status }}</td>
                <td>{{ complaint.createdDate ? complaint.createdDate|date('Y-m-d') : '' }}</td>
                <td>{{ complaint.updatedDate ? complaint.updatedDate|date('Y-m-d') : '' }}</td>
                <td>{{ complaint.archivedDate ? complaint.archivedDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('complaint_show', {'id': complaint.id}) }}">show</a>
                    <a href="{{ path('complaint_edit', {'id': complaint.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('complaint_new') }}">Create new</a>
{% endblock %}
