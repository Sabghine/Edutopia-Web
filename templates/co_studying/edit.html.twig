{% extends 'base.html.twig' %}

{% block title %}Modifer Co-Studying{% endblock %}
{% block content %}
    {% block body %}
        <form method="get" action="{{ path('co_studying_index') }}">
            <button class="button button2" value="{{ path('co_studying_index') }}">Retoruner</button>
            <style>
                .button {
                    background-color: #4CAF50; /* Green */
                    border: none;
                    color: white;
                    padding: 9px 20px;
                    text-align: left;
                    text-decoration: none;
                    display: inline-block;
                    font-size: 16px;
                    margin: 4px 2px;
                    transition-duration: 0.4s;
                    cursor: pointer;
                }

                .button1 {
                    background-color: white;
                    color: black;
                    border: 2px solid #4CAF50;
                }

                .button1:hover {
                    background-color: #4CAF50;
                    color: white;
                }

                .button2 {
                    background-color: white;
                    color: black;
                    border: 2px solid #008CBA;
                }

                .button2:hover {
                    background-color: #008CBA;
                    color: white;
                }

                .button3 {
                    background-color: white;
                    color: black;
                    border: 2px solid #f44336;
                }

                .button3:hover {
                    background-color: #f44336;
                    color: white;
                }

                .button4 {
                    background-color: white;
                    color: black;
                    border: 2px solid #e7e7e7;
                }

                .button4:hover {
                    background-color: #e7e7e7;
                }

                .button5 {
                    background-color: white;
                    color: black;
                    border: 2px solid #555555;
                }

                .button5:hover {
                    background-color: #555555;
                    color: white;
                }

            </style>
        </form>

        <h1>Modifier Contenu</h1>

        <table class="table">
            <tbody>

            <tr>
                <th>{{ form_start(form) }}
                    {{ form_label (form.description, "Description:") }}

                </th>
                <td>
                    {{ form_widget(form.description,{'attr':{'placeholder' : ' Description'}} ) }}
                    {{ form_errors (form.description) }}
                </td>
            </tr>
            <tr>
                <th>
                    {{ form_label (form.type, "Type de contenu:") }}
                </th>
                <td>
                    {{ form_widget(form.type,{'attr':{'placeholder' : ' Type '}} ) }}
                    {{ form_errors (form.type) }}
                </td>
            </tr>
            <tr>
                <th>
                    {{ form_label (form.type, "Fichier:") }}
                </th>
                <td>
                    {{ form_widget(form.file,{'attr':{'placeholder' : ' File '}} ) }}
                    {{ form_errors (form.file) }}
                </td>
            </tr>
            <tr>
                <th>
                    {{ form_label (form.niveau, "Niveau:") }}
                </th>
                <td>
                    {{ form_widget(form.niveau,{'attr':{'placeholder' : ' Niveau p√©dagogique '}} ) }}
                    {{ form_errors (form.niveau) }}
                </td>
            </tr>
            <tr>
                <th>
                    {{ form_label (form.captcha, "Captcha:") }}
                </th>
                <td>
                    {{ form_widget(form.captcha,{'attr':{'placeholder' : 'Entrez le code ici'}} ) }}
                    {{ form_errors (form.captcha) }}
                </td>
            </tr>

            </tbody>
        </table>


        {{ include('co_studying/_form.html.twig', {'button_label': 'Modifier'}) }}
        {{ include('co_studying/_delete_form.html.twig') }}
        <br>



    {% endblock %}
{% endblock %}