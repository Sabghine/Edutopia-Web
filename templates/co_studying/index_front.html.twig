        <body>

        <div class="probootstrap-search" id="probootstrap-search">
            <a href="#" class="probootstrap-close js-probootstrap-close"><i class="icon-cross"></i></a>
            <form action="#">
                <input type="search" name="s" id="search" placeholder="Search a keyword and hit enter...">
            </form>
        </div>

        <div class="probootstrap-page-wrapper">
            <!-- Fixed navbar -->

            <section class="probootstrap-section probootstrap-section-colored">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12 text-left section-heading probootstrap-animate">
                            <h1>Espace Co-Studying</h1>
                        </div>
                    </div>
                </div>
            </section>


            <section class="probootstrap-section">
                <div class="container">

                    <div class="row">
                        <div class="col-md-12">

                            <div class="probootstrap-flex-block">

                                <div class="probootstrap-text probootstrap-animate">
                                    <div class="text-uppercase probootstrap-uppercase">Description</div>
                                    <h3>Co-Studying</h3>
                                    <p>Il s'agit d'un espace dédié spécifiquement aux étudiants, chacun peut y disposer
                                        du contenu parmi les synthèses, les opportunités, les offres de stages et les
                                        emplois indépendants.</p>
                                    <p><a href="{{ path('co_studying_new') }}" class="btn btn-primary">Ajouter
                                            Contenu</a> <span class="enrolled-count">2,928 étudiants ont ajouté du contenu ici</span>
                                    </p>
                                </div>

                                <div class="probootstrap-image probootstrap-animate"
                                     style="background-image: url(/img/slider_wow.jpg)">
                                    <a href="https://www.youtube.com/watch?v=2nDsdtXsN0A"
                                       class="btn-video popup-youtube"><i
                                                class="icon-play3"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <div class="dropdown">
                <form id="CatForm" method="post" action="{{ path('costudying_cat') }}">
                    <select id="selectDo" class="btn btn-primary d-block w-100 mt-3"
                            onchange="myFunctions(event); this.form.submit(); ">
                        <option value="" disabled selected>Choisissez la Catégorie..</option>
                        <option><i class="ri-eye-fill mr-2"></i>Tout</option>
                        {% for c in co_studyingtypes %}
                            <option class="dropdown-item" onclick="document.getElementById('CatForm').submit();">
                                <i class="ri-eye-fill mr-2"></i>
                                {{ c.name }}
                            </option>
                        {% endfor %}
                        <input type="hidden" name="myText" id="myText" type="text" value="">
                        <script>
                            function myFunctions(e) {
                                document.getElementById("myText").value = e.target.value
                            }
                        </script>
                    </select>
                </form>
            </div>

            <br>

            <div class="dropdown">
                <form id="CatForms" method="post" action="{{ path('triCategorieB_front') }}">
                    <select id="selectDo" class="btn btn-primary d-block w-100 mt-3"
                            onchange="myFunction(event); this.form.submit(); ">
                        <option value="" disabled selected>Trier par...</option>
                        <option><i class="ri-eye-fill mr-2"></i>Défaut</option>
                        <option><i class="ri-eye-fill mr-2"></i>Rating</option>
                        <option><i class="ri-eye-fill mr-2"></i>Catégorie</option>
                        <input type="hidden" name="myTexts" id="myTexts" type="text" value="">
                        <script>
                            function myFunction(e) {
                                document.getElementById("myTexts").value = e.target.value
                            }
                        </script>
                    </select>
                </form>
            </div>

            <section class="probootstrap-section">
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            {% for co_studying in co_studyings %}
                                <div class="col-md-6 col-sm-6 col-xs-6 col-xxs-12 probootstrap-animate">
                                    <a href="{{ path('co_studying_front', {'id': co_studying.id}) }}"
                                       class="probootstrap-featured-news-box">
                                        {% if co_studying.type == "Résumé" %}
                                            <figure class="probootstrap-media"><img src="/img/img_sm_1.jpg"
                                                                                    alt="Free Bootstrap Template by uicookies.com"
                                                                                    class="img-responsive"></figure>
                                        {% endif %}
                                        {% if co_studying.type == "Opportunité" %}
                                            <figure class="probootstrap-media"><img src="/img/headhunter.png"
                                                                                    alt="Free Bootstrap Template by uicookies.com"
                                                                                    class="img-responsive"></figure>
                                        {% endif %}
                                        {% if co_studying.type == "Freelance" %}
                                            <figure class="probootstrap-media"><img src="/img/salary.png"
                                                                                    alt="Free Bootstrap Template by uicookies.com"
                                                                                    class="img-responsive"></figure>
                                        {% endif %}
                                        {% if co_studying.type == "Offre Stage" %}
                                            <figure class="probootstrap-media"><img src="/img/job-offer.png"
                                                                                    alt="Free Bootstrap Template by uicookies.com"
                                                                                    class="img-responsive"></figure>
                                        {% endif %}
                                        <div class="probootstrap-text">
                                            <h3>{{ co_studying.type }}</h3>
                                            <span class="probootstrap-date">
                                                <i class="icon-calendar"></i>
                                                {{ co_studying.createdDate ? co_studying.createdDate|date('Y-m-d') : '' }}
                                            </span>
                                            <span class="probootstrap-location">
                                                <i class="icon-books"></i>
                                                {{ co_studying.description }}
                                            </span>
                                            <span class="probootstrap-location">
                                                <i class="icon-profile"></i>
                                                {{ 'Propriétaire : ' ~ co_studying.idstudent }}
                                            </span>
                                            <span class="probootstrap-date">
                                                {{ 'Rating :    ' ~ co_studying.rating }}
                                                <i class="icon-star"></i>
                                            </span>
                                        </div>
                                    </a>

                                    <a class="btn btn-primary" target="_blank" href="/uploads/{{ co_studying.file }}">Download</a>
                                    <a href="{{ path('co_studying_front', {'id': co_studying.id}) }}"
                                       class="btn btn-primary">Voir plus</a>
                                    <br>
                                    <br>
                                </div>

                            {% endfor %}
                        </div>
                    </div>
                </div>
            </section>


            <section class="probootstrap-section">
