{% extends 'base_front.html.twig' %}

{% block title %}Espace Co-Studying{% endblock %}

{% block content %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <nav class="navbar navbar-expand-lg navbar-dark navbar-bg {{ app.session.flashbag.peek('success')|length > 0 ? '' : 'mb-5' }}">
                {{ message }}
            </nav>
        </div>
    {% endfor %}
    {% block body %}

        <html lang="en">
        <head>
            <meta charset="utf-8">
            <meta name="viewport" content="width=device-width, initial-scale=1">
            <title>uiCookies:Enlight &mdash; Free Bootstrap Theme, Free Responsive Bootstrap Website Template</title>
            <meta name="description" content="Free Bootstrap Theme by uicookies.com">
            <meta name="keywords"
                  content="free website templates, free bootstrap themes, free template, free bootstrap, free website template">

            <link href="https://fonts.googleapis.com/css?family=Raleway:300,400,500,700|Open+Sans" rel="stylesheet">
            <link rel="stylesheet" href="../../public/css/styles-merged.css">
            <link rel="stylesheet" href="../../public/css/style.min.css">
            <link rel="stylesheet" href="../../public/css/custom.css">

            <!--[if lt IE 9]>
            <script src="../../public/js/vendor/html5shiv.min.js"></script>
            <script src="../../public/js/vendor/respond.min.js"></script>
