<form method="post" action="{{ path('forum_delete', {'id': forum.id}) }}" onsubmit="return confirm('Vous etes que vous voulez supprimer ce forum?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ forum.id) }}">
    <button class="btn btn-primary" style="border-color: #1aa179;background-color: #1aa179">Supprimer</button>
</form>
