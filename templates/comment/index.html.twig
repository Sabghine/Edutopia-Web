{% extends 'base_front.html.twig' %}

{% block title %}Liste Commentaire{% endblock %}
{% block content %}
{% block body %}
    <h1>Liste des commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Commentaire</th>
                <th>Statut</th>
                <th>Likes</th>
                <th>Dislike</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.content }}</td>
                <td>{{ comment.status }}</td>
                <td>{{ comment.likes }}</td>
                <td>{{ comment.dislike }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">Details</a>
                </td>
                <td>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">aucun commentaire</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
{% endblock %}
