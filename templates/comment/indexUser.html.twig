{% extends 'base_front.html.twig' %}

{% block title %}Liste Commentaire{% endblock %}
{% block content %}
    {% block body %}
        <h1>Liste des commentaires</h1>
        <h5 style="float: right">Nombre des activités disponibles : <b>{{ nbr }}</b></h5><br>
        <table class="table">
            <thead>
            <tr>
                <th>Commentaire</th>
                <th>posté/e par</th>
                <th>Likes</th>
                <th>Dislike</th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for comment in comments %}
                <tr>
                    <td>{{ comment.content }}</td>
                    <td>{{ comment.createdBy }}</td>
                    <td>{{ comment.likes }}</td>
                    <td>{{ comment.dislike }}</td>
                    <td>
                        <button class="btn btn-primary" style="background-color: #1aa179">
                            <a style="color: white" href="{{ path('comment_show', {'id': comment.id}) }}">Details</a>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-primary" style="background-color: #1aa179">
                            <a style="color: white" href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-primary" style="background-color: #1aa179">
                            <a style="color: white" href="{{ path('comment_like', {'id': comment.id}) }}">Like</a>
                        </button>
                    </td>
                    <td>
                        <button class="btn btn-primary" style="background-color: #1aa179">
                            <a style="color: white" href="{{ path('comment_dislike', {'id': comment.id}) }}">Dislike</a>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9">aucun commentaire</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endblock %}
{% endblock %}
