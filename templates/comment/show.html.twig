{% extends 'base_front.html.twig' %}

{% block title %}Details commentaire{% endblock %}
{% block content %}
{% block body %}
    <h1>Details du commentaire</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Commentaire</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ comment.status }}</td>
            </tr>
            <tr>
                <th>Likes</th>
                <td>{{ comment.likes }}</td>
            </tr>
            <tr>
                <th>Dislike</th>
                <td>{{ comment.dislike }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('comment_index') }}">Retourner</a>

    <a href="{{ path('comment_edit', {'id': comment.id}) }}">Modifier</a>

    {{ include('comment/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}
