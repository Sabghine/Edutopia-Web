{% extends 'base_front.html.twig' %}

{% block title %}Details activité{% endblock %}
{% block content %}
{% block body %}
    <h1>Details d'une activité</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Date Limite</th>
                <td>{{ activity.deadline ? activity.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ activity.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">Retourner</a>
    <a href="{{ path('activity_edit', {'id': activity.id}) }}">Télécharger</a>
    <a href="{{ path('activity_edit', {'id': activity.id}) }}">Modifier</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}
