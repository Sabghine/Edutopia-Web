{% extends 'base.html.twig' %}

{% block title %}Activity{% endblock %}

{% block body %}
    <h1>Activity</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ activity.name }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ activity.deadline ? activity.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>WorkTodo</th>
                <td>{{ activity.workTodo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ activity.status }}</td>
            </tr>
            <tr>
                <th>CeatedDate</th>
                <td>{{ activity.ceatedDate ? activity.ceatedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>LastUpdatedDate</th>
                <td>{{ activity.lastUpdatedDate ? activity.lastUpdatedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ArchivedDate</th>
                <td>{{ activity.archivedDate ? activity.archivedDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('activity_index') }}">back to list</a>

    <a href="{{ path('activity_edit', {'id': activity.id}) }}">edit</a>

    {{ include('activity/_delete_form.html.twig') }}
{% endblock %}
