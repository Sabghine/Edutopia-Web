{% extends 'base.html.twig' %}

{% block title %}Details activité{% endblock %}
{% block content %}
{% block body %}
    <h1>Details d'une activité</h1><br><br>

    <table class="table table-avatar">
        <tbody>
            <tr>
                <th>Nom</th>
                <td><span class="probootstrap-meta"><i class="icon-calendar2"></i> <a href="/uploads/{{ activity.workTodo }}" style="color: green" target="_blank">{{ activity.name }}.pdf</a></span></td>
            </tr>
            <tr>
                <th>Date Limite</th>
                <td>{{ activity.deadline ? activity.deadline|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ activity.status }}</td>
            </tr>
        </tbody>
    </table>
    <div  style="display: flex; width: 100%;justify-content: center">
        <div style="margin-right: 20px">
            <button class="btn btn-primary" style="background-color: #1aa179;border-color: #1aa179"><a href="{{ path('activity_index') }}" style="color: white">Retourner</a></button>
        </div>
        <div style="margin-right: 20px">
            <button class="btn btn-primary" style="background-color: #1aa179;border-color: #1aa179"><a href="{{ path('activity_edit', {'id': activity.id}) }}" style="color: white">Modifier</a></button>
        </div>
        <div style="margin-right: 20px">
            {{ include('activity/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
{% endblock %}