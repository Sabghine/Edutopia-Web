{% extends 'base.html.twig' %}

{% block title %}Exam index{% endblock %}

{% block body %}
    <h1>Exam index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>IdExam</th>
                <th>Type</th>
                <th>StartDate</th>
                <th>FinishDate</th>
                <th>CreatedDate</th>
                <th>ArchivedDate</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for exam in exams %}
            <tr>
                <td>{{ exam.idExam }}</td>
                <td>{{ exam.type }}</td>
                <td>{{ exam.startDate ? exam.startDate|date('Y-m-d') : '' }}</td>
                <td>{{ exam.finishDate ? exam.finishDate|date('Y-m-d') : '' }}</td>
                <td>{{ exam.createdDate ? exam.createdDate|date('Y-m-d') : '' }}</td>
                <td>{{ exam.archivedDate ? exam.archivedDate|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('exam_show', {'idExam': exam.idExam}) }}">show</a>
                    <a href="{{ path('exam_edit', {'idExam': exam.idExam}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('exam_new') }}">Create new</a>
{% endblock %}
