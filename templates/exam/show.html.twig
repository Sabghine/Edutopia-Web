{% extends 'base.html.twig' %}

{% block title %}Exam{% endblock %}
{% block content %}

{% block body %}
    <h1>Exam</h1>

    <table border="1" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="zero_config_info" id="zero_config">
    <tbody>
            <tr>
                <th>Type</th>
                <td>{{ exam.type }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ exam.startDate ? exam.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>FinishDate</th>
                <td>{{ exam.finishDate ? exam.finishDate|date('Y-m-d') : '' }}</td>
            </tr>


        </tbody>
    </table>
<h2> liste des questions</h2>
    <table border="1" class="table table-striped table-bordered dataTable" role="grid" aria-describedby="zero_config_info" id="zero_config">

        <thead>
        <tr>

            <th>Question</th>
            <th>Proposition1</th>
            <th>Proposition2</th>
            <th>Proposition3</th>
            <th>Proposition4</th>
            <th>Bonnereponse</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for question in questions %}
            <tr>

                <td>{{ question.question }}</td>
                <td>{{ question.proposition1 }}</td>
                <td>{{ question.proposition2 }}</td>
                <td>{{ question.proposition3 }}</td>
                <td>{{ question.proposition4 }}</td>
                <td>{{ question.bonnereponse }}</td>
                <td>
                    <a href="{{ path('question_show', {'id': question.id}) }}">show</a>
                    <a href="{{ path('question_edit', {'id': question.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



    <a href="{{ path('exam_bysubject',{'id': exam.idSubject.id}) }}">back to list</a>

    <a href="{{ path('exam_edit', {'idExam': exam.idExam}) }}">edit</a>

    {{ include('exam/_delete_form.html.twig') }}
{% endblock %}
{% endblock %}

