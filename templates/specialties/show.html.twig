{% extends 'base.html.twig' %}

{% block title %}Specialties{% endblock %}

{% block body %}
    <h1>Specialties</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ specialty.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ specialty.name }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ specialty.lastname }}</td>
            </tr>
            <tr>
                <th>Specialty</th>
                <td>{{ specialty.specialty }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ specialty.niveau }}</td>
            </tr>
            <tr>
                <th>CreatedDate</th>
                <td>{{ specialty.createdDate ? specialty.createdDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateDate</th>
                <td>{{ specialty.updateDate ? specialty.updateDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>ArchivedDate</th>
                <td>{{ specialty.archivedDate ? specialty.archivedDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ specialty.status }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('specialties_index') }}">back to list</a>

    <a href="{{ path('specialties_edit', {'id': specialty.id}) }}">edit</a>

    {{ include('specialties/_delete_form.html.twig') }}
